<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zhonghao.mybutler">

    <!--读取Log -->
    <uses-permission android:name="android.permission.READ_LOGS" />
    <!--允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!--获取GSM（2g）、WCDMA（联通3g）等网络状态的信息  -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!--保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!--获取sd卡写的权限，用于文件上传和下载-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--允许读取手机状态 用于创建BmobInstallation-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--获取手机录音机使用权限，听写、识别、语义理解需要用到此权限 -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <!--允许程序改变网络连接状态 -->
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!--读取联系人权限，上传联系人需要用到此权限 -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--短信权限-->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!--窗口权限-->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!--百度地图权限-->
    <uses-permission android:name="com.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <!-- 这个权限用于进行网络定位-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 这个权限用于访问GPS定位-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <!-- SD卡读取权限，用户写入离线定位数据-->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>


    <application
        android:name=".appliaction.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/tubiao"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingActivity"
            android:label="设置"/>
        <activity android:name=".MainActivity"/>
        <activity
            android:name=".ui.GuideActivity"
            android:theme="@style/FullScreen"/>
        <activity
            android:name=".ui.LoginActivity"
            android:label="登录">
        </activity>
        <activity
            android:name=".ui.RegisterActivity"
            android:label="注册">

        </activity>
        <activity
            android:name=".ui.ForgetPasswordActivity"
            android:label="忘记密码">
        </activity>

        <activity
            android:name=".ui.CourierActivity"
            android:label="快递查询">
        </activity>

        <!--归属地查询-->
        <activity
            android:name=".ui.PhoneActivity"
            android:label="归属地查询"/>

        <activity
            android:name=".ui.UpdateActivity"
            android:label="下载更新"/>
        <activity
            android:name=".ui.QrCodeActivity"
            android:label="生成二维码"/>

        <!--我的位置-->
        <activity
            android:name=".ui.LocationActivity"
            android:label="@string/text_my_location"/>

        <!--关于软件-->
        <activity
            android:name=".ui.AboutActivity"
            android:label="@string/text_about_app"/>

        <!--新闻详情-->
        <activity android:name=".ui.WebViewActivity"/>

        <meta-data
            android:name="com.baidu.lbsapi.API_KEY"
            android:value="50m1kTWt7YsrYOYUiXM6mMr9Mp6Ivxc0"/>

        <!--定位的service-->
        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"/>
    </application>

</manifest>